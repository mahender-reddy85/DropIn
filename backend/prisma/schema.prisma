generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id         String   @id @default(cuid())
  filename   String
  originalname String
  filepath   String
  mimetype   String
  size       Int
  uploadedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model User {
  id         String   @id @default(cuid())
  username   String   @unique
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
